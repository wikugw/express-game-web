<%- include ('partials/header'); -%>
<h1>This is a list of all the games we have</h1>

<div class="row">
    <% for(var i = 0; i < gamesList.length; i++) { %>
    <div class="col-md-4">
        <div class="card-mb-4 shadow-sm" style="width: 18rem;">
            <img src="/games/thumbnails/<%= gamesList[i].thumbnailFile %>" class="card-img-top" style="height: 200px">
            <div class="card-body">
                <h5 class="card-title"><%= gamesList[i].title%></h5>
                <p class="card-text">Creator: <%= gamesList[i].creator%></p>
                <a href="/game/<%= gamesList[i].id %>" class="btn btn-primary">Play
                    Game
                </a>
                <a href="/game/edit/<%= gamesList[i].id %>" class="btn btn-success">
                    Edit
                </a>
                <a href="/game/delete/<%= gamesList[i].id %>" class="btn btn-danger">
                    Delete
                </a>
            </div>
        </div>
    </div>
    <% } %>
</div>
<%- include ('partials/footer'); -%>